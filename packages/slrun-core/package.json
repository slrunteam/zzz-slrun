{
  "name": "slrun-core",
  "version": "0.1.5",
  "main": "lib/index.js",
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "testPathIgnorePatterns": [
      "/example/"
    ],
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/example/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "standard": {
    "env": {
      "jest": true
    },
    "ignore": [
      "/example/"
    ]
  },
  "scripts": {
    "lint": "standard --fix",
    "test": "npm run lint && jest",
    "test:strict": "standard && jest --coverage",
    "proxy": "cd example/proxy && npm start",
    "start": "node example/server"
  },
  "repository": "https://github.com/slrunteam/slrun/tree/master/packages/slrun-core",
  "author": "SL.RUN <team@sl.run>",
  "license": "MIT",
  "dependencies": {
    "ecstatic": "^3.0.0",
    "fuxy": "^0.1.6",
    "http-proxy": "^1.16.2"
  }
}
